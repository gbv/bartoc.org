  },
  "dependencies": {
    "axios": "^0.19.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "front-matter": "^3.0.2",
    "jskos-cli": "^0.4.1",
    "jsonld": "^2.0.1",
    "lodash": "^4.17.19",
    "marked": "^0.7.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "ejs-lint": "gbv/ejs-lint",
