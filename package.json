{
  "name": "bartoc.org",
  "version": "0.0.1",
  "description": "BARTOC.org web interface",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
